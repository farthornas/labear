#: import audio_player plyer.audio

<AudioInterface>:
    audio: audio_player
    orientation: 'vertical'
    padding: '250dp'
    spacing: '20dp'

    MDLabel:
        id: state
        text: 'Audio is:'+str(root.audio.state)
        size_hint_y: None
    MDLabel:
        id: audio_location
        text: 'Audio is saved at - ' + str(root.audio.file_path)
        size_hint_y: None
    MDLabel:
        id: upload_state_label
        text: ""
    
    MDRectangleFlatButton:
        id: record_button
        text: 'RECORD'
        on_release: root.start_recording()

    MDRectangleFlatButton:
        id: play_button
        text: 'PLAY'
        on_release: root.start_playing()
    
    MDRectangleFlatButton:
        id: upload_button
        text: 'UPLOAD'
        on_release: root.upload()


 




